<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - MOOVIEME</title>
    <link rel="stylesheet" href="/stylesheets/login.css" />
</head>
<body>
    <!--Cabecera-->
    <header>
        <div class="logo">MOOVIEME</div>
        <nav>
            <ul>
                <li><a href="/inicio">Inicio</a></li>
                <li><a href="/contacto">Contacto</a></li>
            </ul>
        </nav>
    </header>

    <!--Login-->
    <div class="login-container">
        <div class="login-box">
            <% if (typeof error !== 'undefined') { %>
                <p class="error-message"><%= error %></p>
            <% } %>
            <form id="loginForm" action="/auth/login" method="POST">
                <div class="form-group">
                    <h3>Iniciar Sesión</h3>
                </div>
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input
                        type="text"
                        id="username"
                        name="username"
                        placeholder="Ingrese nombre de usuario o correo electrónico"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Ingrese contraseña"
                        required
                    />
                </div>
                <button type="submit" class="login-btn">Iniciar sesión</button>
                <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>

                <div class="external-login">
                    <button type="button" class="google-btn">
                        <img src="/images/google-g-2015.svg" alt="Google logo" /> Iniciar con Google
                    </button>
                    <button type="button" class="apple-btn">
                        <img src="/images/apple-14.svg" alt="Apple logo" /> Iniciar con Apple
                    </button>
                    <button type="button" class="facebook-btn">
                        <img src="/images/facebook-3-3.svg" alt="Facebook logo" /> Iniciar con Facebook
                    </button>
                </div>
            </form>
        </div>
    </div>
    <script src="/javascripts/sesion.js"></script>
</body>
</html>
